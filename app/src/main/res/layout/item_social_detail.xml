<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/spacing_medium_small">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/head_portrait"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView

        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_medium_small"
        android:text="ssss"
        android:textColor="@color/txtSecondColor"
        android:textSize="@dimen/textSize_small_much"
        app:layout_constraintLeft_toRightOf="@+id/head_portrait" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium_small"
        android:text="ss"
        android:textColor="@color/txtSuperColor"
        android:textSize="@dimen/textSize_small"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/txtSecondColor"
        android:textSize="@dimen/textSize_small_much"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_comment_to_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_recommend_edit_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/spacing_medium_small"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_small"
        app:layout_constraintLeft_toLeftOf="@+id/tv_name"
        android:layout_marginRight="@dimen/spacing_medium_small"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_content">

        <TextView
            android:id="@+id/first_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/textSize_small"
            android:text="121"/>

        <TextView
            android:id="@+id/second_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/textSize_small"
            android:text="123"/>

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/textSize_small"
            android:text="查看更多"/>

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/spacing_medium_small"
        android:background="@drawable/shape_imaginary_landscape_line"
        android:layerType="software"
        android:layout_marginLeft="@dimen/spacing_medium_small"
        android:layout_marginRight="@dimen/spacing_medium_small"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_comment_to_user"
        app:layout_constraintLeft_toRightOf="@+id/head_portrait"/>

</android.support.constraint.ConstraintLayout>