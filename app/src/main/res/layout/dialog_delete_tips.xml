<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_top_bg"
        android:gravity="center"
        android:padding="@dimen/spacing_medium_small"
        android:singleLine="true"
        android:textSize="@dimen/textSize_medium"
        android:text="是否删除当前选中的图片？"
        android:textColor="@color/txtSuperColor" />

    <include layout="@layout/item_line"/>

    <TextView
        android:id="@+id/tvDialogDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_dialog_item_bg_buttom"
        android:gravity="center"
        android:padding="@dimen/spacing_medium_small"
        android:singleLine="true"
        android:text="@string/delete"
        android:textColor="@color/red"
        android:textSize="@dimen/textSize_medium_small" />


    <TextView
        android:id="@+id/tvDialogCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_small_much"
        android:background="@drawable/select_dialog_item_bg_only"
        android:gravity="center"
        android:padding="@dimen/spacing_medium_small"
        android:singleLine="true"
        android:text="@string/cancel"
        android:textColor="@color/lblue"
        android:textSize="@dimen/textSize_medium_small" />

</LinearLayout>