<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/itemSplit_line"
    android:background="@color/white"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tvSelfItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1.5"
        android:textColor="@color/txtSecondColor"
        android:textSize="@dimen/textSize_medium_small" />

    <EditText
        android:id="@+id/editInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_weight="3"
        android:background="@null"
        android:hint="输入数值"
        android:inputType="number|numberDecimal|numberSigned"
        android:maxLength="10"
        android:padding="@dimen/spacing_medium_small"
        android:singleLine="true"
        android:textColor="@color/txtSecondColor"
        android:textColorHint="@color/txtLight"
        android:textSize="@dimen/textSize_medium_small" />
</LinearLayout>