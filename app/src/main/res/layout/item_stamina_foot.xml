<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/BgColor"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvFoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/spacing_medium_small"
            android:paddingRight="@dimen/spacing_medium_small">

    </android.support.v7.widget.RecyclerView>

    <Button
            android:id="@+id/bt_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium_small"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="@dimen/spacing_medium_small"
            android:background="@drawable/selector_btn"
            android:text="提升方案"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_medium_small"
            android:visibility="gone"
            />
</LinearLayout>