<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_advanced"
                android:scaleType="centerCrop" />
        <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:drawableLeft="@mipmap/back"
                android:layout_marginTop="30dp"
                android:drawablePadding="@dimen/dp_4"
                android:textColor="@color/white"
                android:text="返回"
                 />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/introduction"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:textColor="@color/txtSuperColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/spacing_medium_small"
            android:layout_marginTop="8dp"
            android:text="课程介绍" />

        <TextView
            android:id="@+id/tv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_marginTop="8dp"
            android:drawableEnd="@mipmap/icon_more"
            android:drawablePadding="@dimen/spacing_small"
            android:gravity="center" />
        <TextView
            android:textSize="12dp"
            android:text="篮球运动是由跑、跳、投等基本动作所组成的一项综合性运动，对提高速度、耐力、灵巧性、弹跳等身体素质起着良好的作用。"
            android:ellipsize="end"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/tv_info"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/tv_arrow"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/BgColor" />

    <RelativeLayout
        android:id="@+id/Rl_Club"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:textColor="@color/txtSuperColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/spacing_medium_small"
            android:text="俱乐部" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/spacing_large"
            android:drawableEnd="@mipmap/icon_more"
            android:drawablePadding="@dimen/spacing_small"
            android:gravity="center"
            android:text="单色体育俱乐部" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/BgColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_medium_small"
        android:layout_marginTop="@dimen/spacing_medium_small"
        android:text="训练课程" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium_small"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medium_small"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/lanqiu" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium_small"
                android:gravity="center"
                android:text="初级课程" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/lanqiu" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium_small"
                android:gravity="center"
                android:text="初级课程" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="@dimen/spacing_medium_small"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/lanqiu" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium_small"
                android:gravity="center"
                android:text="初级课程" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="@dimen/spacing_medium"
        android:background="@color/BgColor" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_medium_small"
        android:layout_marginRight="@dimen/spacing_medium_small"
        android:layout_marginTop="@dimen/spacing_medium_small">

        <TextView
            android:textColor="@color/txtSuperColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自我评价" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_message" />
    </RelativeLayout>


</LinearLayout>