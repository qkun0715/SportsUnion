<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_medium_large"
        android:src="@mipmap/icon_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_projects"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_medium_small"
        android:text="练习乒乓球"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/txtSuperColor"
        android:textSize="@dimen/textSize_medium_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_list"
        app:layout_constraintTop_toTopOf="parent" />

    <!--        android:text="打卡"
        android:textColor="@color/pk_mean_color"-->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_large"
        android:background="@drawable/shape_week_exercise"
        android:gravity="center"
        android:text="打卡"
        android:textColor="@color/pk_mean_color"
        android:textSize="@dimen/textSize_small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/spacing_medium_large"
        android:background="@color/line_color"
        app:layout_constraintLeft_toLeftOf="@+id/tv_projects"
        app:layout_constraintRight_toRightOf="@+id/tv_status"
        app:layout_constraintTop_toBottomOf="@+id/tv_projects" />


</android.support.constraint.ConstraintLayout>