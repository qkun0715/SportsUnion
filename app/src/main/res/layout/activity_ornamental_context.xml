<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/club_details_bg"
                        android:layout_width="match_parent"
                        android:layout_height="185dp"
                        android:scaleType="centerCrop"/>

                <TextView
                        android:id="@+id/tv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="30dp"
                        android:drawableLeft="@mipmap/back"
                        android:drawablePadding="@dimen/dp_4"
                        android:text="返回"
                        android:textColor="@color/white"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_gravity="center_horizontal"
                        android:drawablePadding="@dimen/dp_4"
                        android:text="运动课程"
                        android:textSize="16dp"
                        android:textColor="@color/white"/>
            </FrameLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="@color/BgColor"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="6dp"
                    >

                <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_medium_small"
                        android:drawableStart="@mipmap/sensory_blue"
                        android:drawablePadding="12dp"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/txtSuperColor"/>

                <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="12dp"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/txtSecondColor"
                        android:text=""/>
            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:background="@color/BgColor"/>

            <TextView
                    android:id="@+id/tv_do"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_medium_small"
                    android:drawableStart="@mipmap/sensory_blue"
                    android:drawablePadding="12dp"
                    android:layout_marginTop="15dp"
                    android:padding="6dp"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/txtSuperColor"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"/>

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:background="@color/BgColor"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                <TextView
                        android:id="@+id/tv_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_medium_small"
                        android:drawableStart="@mipmap/sensory_blue"
                        android:drawablePadding="12dp"
                        android:layout_marginTop="15dp"
                        android:padding="6dp"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/txtSuperColor"/>

                <TextView
                        android:id="@+id/tv_announcements"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/dp_4"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/txtSecondColor"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>