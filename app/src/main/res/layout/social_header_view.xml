<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/social_header_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_four_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="bottom"
        android:background="@color/BgColor" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/spacing_medium_small"
        android:layout_marginRight="@dimen/spacing_medium_small"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_medium_small"
            android:text="我的名字叫猪小明"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_medium_small" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/social_header_photo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@mipmap/icon_football" />
    </LinearLayout>
</FrameLayout>