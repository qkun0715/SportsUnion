<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_advanced"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_medium_small"
    android:layout_marginRight="@dimen/spacing_medium_small"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="16dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_club_bg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@mipmap/icon_color"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_marginLeft="34dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_club_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="俱乐部名称"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_medium_small"/>

        <TextView
            android:id="@+id/tv_presentation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10个课程项目"
            android:textColor="#d4dbd1"
            android:textSize="@dimen/textSize_small"/>

    </LinearLayout>
</android.support.v7.widget.CardView>