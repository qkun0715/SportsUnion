<resources>

    <!-- 主界面底部导航栏按钮样式 -->
    <style name="mainBottomBtnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize_small_much</item>
        <item name="android:textColor">@color/main_bottom_tab</item>
        <item name="android:drawablePadding">@dimen/itemSplit_line</item>
        <item name="android:paddingTop">@dimen/spacing_small_much</item>
        <item name="android:paddingBottom">@dimen/spacing_small_much</item>
        <item name="android:button">@null</item>
    </style>

    <!-- 个人中心列表 条目样式 -->
    <style name="myListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/spacing_medium_small</item>
        <item name="android:paddingRight">@dimen/spacing_medium_small</item>
        <item name="android:paddingTop">@dimen/spacing_medium_large</item>
        <item name="android:paddingBottom">@dimen/spacing_medium_large</item>
        <item name="android:background">@drawable/selector</item>
    </style>
    <!-- 个人中心 条目 小标题字体样式 -->
    <style name="myListTitleStyle">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txtSuperColor</item>
        <item name="android:textSize">@dimen/textSize_medium_small</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!-- 个人中心 条目 内容字体样式 -->
    <style name="myListContentStyle">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/txtLight</item>
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--dialog总样式-->
    <style name="NiceDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--dialog动画-->
    <style name="DefaultAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/enter_anim</item>
        <item name="android:windowExitAnimation">@anim/exit_anim</item>
    </style>

    <!-- tablayout 字体大小 样式 -->
    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/textSize_medium_small</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NoTitleTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
